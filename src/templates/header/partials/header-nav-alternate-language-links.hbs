{{#if isMultiLingual}}
    {{#each alternativeLanguageLinks as | lang |}}
        <li class="c-nav-list-item u-showAboveMid" data-test-id="languageToggle">
            <a href="{{ lang.changeLanguageUrl }}" class="c-nav-list-link">
                <span class="is-visuallyHidden">
                    {{#with ../this}}{{ i18n "header-languageSwitcherAccessibility" language=lang.name }}{{/with}}
                </span>
                {{#with ../this}}{{ i18n "header-languageSwitcherName" language=lang.name }}{{/with}}
            </a>
        </li>
    {{/each}}
{{/if}}
